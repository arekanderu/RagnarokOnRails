<% if @cart.include?(@product)%>
  <br />
  <%= button_to 'remove from cart', remove_from_cart_path(@product.id), method: :delete %>
  <% else %>
  <br />
    <%= form_tag(add_to_cart_path(@product.id, :query), method: "post", local: true) do %>
    <%= label_tag(:query, "Quantity:") %>
    <div class="quantity_in_products">
      <%= number_field_tag(:query,"1") %>
    </div>
      <br />
      <%= submit_tag("Submit", class:"button is-danger") %>

    <% end %>
<% end %>