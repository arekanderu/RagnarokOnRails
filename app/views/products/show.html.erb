<br />
<br />
<ul>
    <li><%= @product.name%></li>
    <li><%=image_tag(url_for(@product.image), alt:"product_image") %></li>

    <li>
      Price: CDN$ <%= number_with_precision(@product.price, :precision => 2, :delimiter => ',')%>
    </li>

    <li>
      Category: <%= link_to(@product.category.name, @product.category )%>
    </li>

    <li>
      Attack: <%= @product.attack %>
    </li>

    <li>
      Description: <%= @product.description %>
    </li>

    <li>
      Number in stock <%= @product.number_in_stock %>
    </li>

      <% if @cart.include?(@product)%>
        <li>Product is in your cart.</li>
      <% else %>
       <li><%= link_to 'Add to cart', add_to_cart_path(@product.id), method: :post %></li>
      <% end %>
  </ul>